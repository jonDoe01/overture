{
  "extends": "eslint:recommended",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "no-undef": "off",
    "eol-last": 2,
    "eqeqeq": "error"
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "mocha": true
  }
}
